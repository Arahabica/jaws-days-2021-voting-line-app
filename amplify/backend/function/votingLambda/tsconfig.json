{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": [
          "dom",
          "esnext"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "./src",
      "baseUrl": "./",
      "rootDir": "./src",
      "paths": {
          "src": [
              "./src"
          ]
      }
  },
  "include": [
   "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}